{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "sourceRoot": "src",
    "outDir": "build",
    "sourceMap": false,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}